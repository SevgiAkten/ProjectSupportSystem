@model ProjectSupportSystem.Models.Support

@{
    ViewData["Title"] = "Delete";
}

<h1>Sil</h1>

<h3>Bu desteği silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Destek</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Türü
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SupportType)
        </dd>
        <dt class="col-sm-2">
            Adı
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SupportName)
        </dd>
        <dt class="col-sm-2">
            Kimler Başvurabilir?
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WhoApply)
        </dd>
        <dt class="col-sm-2">
            Amacı
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Goal)
        </dd>
        <dt class="col-sm-2">
            Başvuru Süreci ve Şekli
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApplicationProcessAndCondition)
        </dd>
        <dt class="col-sm-2">
            Süresi (Ay)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SupportDuration)
        </dd>
        <dt class="col-sm-2">
            Oranı (%)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SupportPercentage)
        </dd>
        <dt class="col-sm-2">
            Miktarı (TL)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SupportAmount)
        </dd>
        <dt class="col-sm-2">
            Kodu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
       
        <dt class="col-sm-2">
            Açıklaması
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Listeye Geri Dön</a>
    </form>
</div>
