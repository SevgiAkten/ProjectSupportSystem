@model ProjectSupportSystem.Models.Support

@{
    ViewData["Title"] = "Details";
}

<h1>Detaylar</h1>

<div>
    <h4>Destek</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Türü
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SupportType)
        </dd>
        <dt class="col-sm-2">
            Adı
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SupportName)
        </dd>
        <dt class="col-sm-2">
            Kimler Başvurabilir?
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WhoApply)
        </dd>
        <dt class="col-sm-2">
            Amacı
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Goal)
        </dd>
        <dt class="col-sm-2">
            Başvuru Süreci ve Şekli
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApplicationProcessAndCondition)
        </dd>
        <dt class="col-sm-2">
            Süresi (Ay)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SupportDuration)
        </dd>
        <dt class="col-sm-2">
            Oranı (%)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SupportPercentage)
        </dd>
        <dt class="col-sm-2">
            Miktarı (TL)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SupportAmount)
        </dd>
        <dt class="col-sm-2">
            Kodu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
       
        <dt class="col-sm-2">
            Açıklaması
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Düzenle</a> |
    <a asp-action="Index">Listeye Geri Dön</a>
</div>
