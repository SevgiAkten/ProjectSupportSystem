@model ProjectSupportSystem.Models.SupportElement

@{
    ViewData["Title"] = "Edit";
}

<h1>Düzenle</h1>

<h4>Destek Unsuru</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SupportElementName" class="control-label">Adı</label>
                <input asp-for="SupportElementName" class="form-control" />
                <span asp-validation-for="SupportElementName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupportElementPercentage" class="control-label">Oranı (%)</label>
                <input asp-for="SupportElementPercentage" class="form-control" />
                <span asp-validation-for="SupportElementPercentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupportElementAmount" class="control-label">Miktarı (TL)</label>
                <input asp-for="SupportElementAmount" class="form-control" />
                <span asp-validation-for="SupportElementAmount" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Description" class="control-label">Açıklaması</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
