@model ProjectSupportSystem.Models.SupportElement

@{
    ViewData["Title"] = "Delete";
}

<h1>Sil</h1>

<h3>Bu destek unsurunu gerçekten silmek istiyor musunuz?</h3>
<div>
    <h4>Destek Unsuru</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Adı
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SupportElementName)
        </dd>
        <dt class="col-sm-2">
            Oranı (%)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SupportElementPercentage)
        </dd>
        <dt class="col-sm-2">
            Miktarı (TL)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SupportElementAmount)
        </dd>
       
        <dt class="col-sm-2">
            Açıklaması
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Listeye Geri Dön</a>
    </form>
</div>
