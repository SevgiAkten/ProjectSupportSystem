@model ProjectSupportSystem.Models.SupportElement

@{
	ViewData["Title"] = "Create";
}


<h4>Destek Unsuru Formu</h4>

<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="ID" />
			<div class="form-group">
				<label asp-for="SupportElementName" class="control-label"></label>
				<input asp-for="SupportElementName" class="form-control" />
				<span asp-validation-for="SupportElementName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="SupportElementPercentage" class="control-label"></label>
				<input asp-for="SupportElementPercentage" class="form-control" />
				<span asp-validation-for="SupportElementPercentage" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="SupportElementAmount" class="control-label"></label>
				<input asp-for="SupportElementAmount" class="form-control" />
				<span asp-validation-for="SupportElementAmount" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<input asp-for="Description" class="form-control" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-row">
				<div class="form-group col-md-6">
					<input type="submit" value="Kaydet" class="btn btn-primary btn-block" />
				</div>
				<div class="form-group col-md-6">
					<a asp-action="Index" class="btn btn-warning btn-block"><i class="fade fa-table"></i> Listeye Geri Dön</a>
				</div>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
