@model ProjectSupportSystem.Models.SupportElement

@{
    ViewData["Title"] = "Details";
}

<h1>Detaylar</h1>

<div>
    <h4>Destek Unsuru</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Adı
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SupportElementName)
        </dd>
        <dt class="col-sm-2">
            Oranı
        </dt>
        <dd class = "col-sm-10">
           % @Html.DisplayFor(model => model.SupportElementPercentage)
        </dd>
        <dt class="col-sm-2">
            Miktarı
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SupportElementAmount) TL
        </dd>
        
        <dt class="col-sm-2">
            Açıklaması
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Düzenle</a> |
    <a asp-action="Index">Listeye Geri Dön</a>
</div>
